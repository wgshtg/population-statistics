<div class="row m-3">
<div class="input-group mb-3 col-md-6">
  <div class="input-group-prepend">
    <label class="input-group-text" for="inputGroupSelect01">地區</label>
  </div>
  <select class="custom-select" id="inputGroupSelect01">
    <option selected value="">選擇地區...</option>
    <%= options_for_select(@AreaNames) %>
  </select>
</div>
<div class="input-group mb-3 col-md-6">
  <div class="input-group-prepend">
    <label class="input-group-text" for="inputGroupSelect02">年份</label>
  </div>
  <select class="custom-select" id="inputGroupSelect02">
    <option selected value="">選擇年份...</option>
    <%= options_for_select(@Years) %>
  </select>
</div>
<div class="input-group mb-3 col-md-6">
  <div class="input-group-prepend">
    <label class="input-group-text" for="inputGroupSelect03">月份</label>
  </div>
  <select class="custom-select" id="inputGroupSelect03">
    <option selected value="">選擇月份...</option>
    <%= options_for_select(@Months) %>
  </select>
</div>
<div class="input-group mb-3 col-md-6">
