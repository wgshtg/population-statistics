<%= form_tag(statistics_query_path, method: "get", remote: true) do %>
  <div class="row m-3">
    <div class="input-group mb-3 col-md-6">
      <div class="input-group-prepend">
        <label class="input-group-text" for="inputGroupSelect01">地區</label>
      </div>
      <select class="custom-select" id="inputGroupSelect01" name="AreaName">
        <option selected value="">選擇地區...</option>
        <%= options_for_select(@AreaNames) %>
      </select>
    </div>
    <div class="input-group mb-3 col-md-6">
      <div class="input-group-prepend">
        <label class="input-group-text" for="inputGroupSelect02">年份</label>
      </div>
      <select class="custom-select" id="inputGroupSelect02" name="Year">
        <option selected value="">選擇年份...</option>
        <%= options_for_select(@Years) %>
      </select>
    </div>
    <div class="input-group mb-3 col-md-6">
      <div class="input-group-prepend">
        <label class="input-group-text" for="inputGroupSelect03">月份</label>
      </div>
      <select class="custom-select" id="inputGroupSelect03" name="Month">
        <option selected value="">選擇月份...</option>
        <%= options_for_select(@Months) %>
      </select>
    </div>
    <div class="input-group mb-3 col-md-6">
      <div class="input-group-prepend">
        <label class="input-group-text" for="inputGroupSelect04">性別</label>
      </div>
      <select class="custom-select" id="inputGroupSelect04" name="Sex">
        <option selected value="">選擇性別...</option>
        <%= options_for_select(@Sexs) %>
      </select>
    </div>
    <div class="input-group mb-3 col-md-6">
      <div class="input-group-prepend">
        <label class="input-group-text" for="inputGroupSelect05">年齡區間(下限)</label>
      </div>
      <select class="custom-select" id="inputGroupSelect05" name="AgeMin">
        <option selected value="">選擇年齡區間(下限)...</option>
        <%= options_for_select(@Ages) %>
      </select>
    </div>
    <div class="input-group mb-3 col-md-6">
      <div class="input-group-prepend">
        <label class="input-group-text" for="inputGroupSelect05">年齡區間(上限)</label>
      </div>
      <select class="custom-select" id="inputGroupSelect05" name="AgeMax">
        <option selected value="">選擇年齡區間(上限)...</option>
        <%= options_for_select(@Ages) %>
      </select>
    </div>
    <div class="input-group mb-3 col-md-6">
      <div class="input-group-prepend">
        <label class="input-group-text" for="inputGroupSelect06">圖表類型</label>
      </div>
      <select class="custom-select" id="inputGroupSelect06" name="Chart">
        <option selected value="">選擇圖表類型...</option>
        <%= options_for_select(@Charts) %>
      </select>
    </div>
    <div class="col-md-12 mb-3 text-right">
      <%= submit_tag("查詢", class: "btn btn-primary") %>
    </div>
  </div>
<% end %>
<div id="chart" class="m-4"></div>
  
