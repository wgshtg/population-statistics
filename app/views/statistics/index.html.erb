    <label class="input-group-text" for="inputGroupSelect05">年齡區間</label>
  </div>
  <select class="custom-select" id="inputGroupSelect05">
    <option selected value="">選擇年齡區間...</option>
    <%= options_for_select(@Ages) %>
  </select>
</div>
<div class="col-md-6 mb-3">
  <button type="button" class="btn btn-primary" id="query">查詢</button>
  <%= link_to "查詢", statistics_query_path, remote: true, class: "btn btn-primary" %>
</div>
</div>
<div id="chart"></div>
<% pie_chart(@result) %>
<% pie_chart({"Football" => 10, "Basketball" => 5}) %>
